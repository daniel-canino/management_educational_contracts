<odoo>
    <record id="view_educational_dashboard_form" model="ir.ui.view">
        <field name="name">educational.dashboard.form</field>
        <field name="model">educational.dashboard</field>
        <field name="arch" type="xml">
            <form string="Power BI Dashboard" js_class="powerbi_dashboard_form">
                <div id="powerbi_dashboard_container"
                    style="position: absolute; top: 0; bottom: 0; left: 0; right: 0;"></div>
            </form>
        </field>
    </record>

    <record id="action_educational_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboard de Contratos</field>
        <field name="res_model">educational.dashboard</field>
        <field name="view_mode">form</field>
        <field name="views">[[False, 'form']]</field>
    </record>

    <menuitem id="menu_educational_dashboard"
              name="Dashboard de Contratos"
              parent="educational_contract_menu"
              action="action_educational_dashboard"/>

</odoo>