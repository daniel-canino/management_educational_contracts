<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="educational_contract_view_form" model="ir.ui.view">
        <field name="name">educational.contract.view.form</field>
        <field name="model">educational.contract</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Crear factura" name="action_create_invoice" type="object" class="oe_highlight" attrs="{'invisible': [('has_invoice', '=', True)]}" />
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button name="action_open_invoice"
                                class="oe_stat_button"
                                icon="fa-bars"
                                type="object"
                                attrs="{'invisible': [('has_invoice', '=', False)]}"
                                string="Factura">
                        </button>
                    </div>
                    <group>
                        <field name="name" />
                        <field name="student_id" />
                        <field name="invoice_ids" invisible="1" />
                        <field name="has_invoice" invisible="1"  />
                        <field name="payment_status" 
                            decoration-success="payment_status == 'paid'"
                            decoration-info="payment_status == 'in_payment'"
                            decoration-warning="payment_status == 'not_paid'"
                            decoration-primary="payment_status == 'partial'"
                            decoration-muted="payment_status == 'nothing'"
                            decoration-danger="payment_status == 'reversed'"
                            widget="badge" attrs="{'invisible': [('has_invoice', '=', False)]}" />
                    </group>
                    <notebook>
                        <page name="subjects" string="Materias">
                            <field name="contract_line_ids">
                                <tree editable="bottom">
                                    <field name="student_subject_ids" invisible="1" />
                                    <field name="professor_subject_ids" invisible="1" />
                                    <field name="subject_id" />
                                    <field name="professor_id" />
                                    <field name="cost" />
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <label string="Costo Total:" for="total_amount" />
                                <field name="total_amount" widget="monetary" readonly="1" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="educational_contract_view_tree" model="ir.ui.view">
        <field name="name">educational.contract.view.tree</field>
        <field name="model">educational.contract</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="student_id" />
                <field name="payment_status" decoration-success="payment_status == 'paid'"
                    decoration-info="payment_status == 'in_payment'"
                    decoration-warning="payment_status == 'not_paid'"
                    decoration-primary="payment_status == 'partial'"
                    decoration-muted="payment_status == 'nothing'"
                    decoration-danger="payment_status == 'reversed'"
                    widget="badge" />
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="educational_contract_search" model="ir.ui.view">
        <field name="name">educational.contract.search</field>
        <field name="model">educational.contract</field>
        <field name="arch" type="xml">
            <search>
                <group expand="0" string="Agrupar por">
                    <filter string="Estudiante" name="group_by_student_id" context="{'group_by': 'student_id'}"/>
                </group>
                
                <field name="name" string="Nombre" filter_domain="[('name', 'ilike', self)]"/>
            </search>
        </field>
    </record>

    <!-- Window Action -->
    <record id="educational_contract_action" model="ir.actions.act_window">
        <field name="name">Contrato de Matriculación</field>
        <field name="res_model">educational.contract</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem
        id="educational_contract_menu"
        name="Contratos de Matriculación"
        sequence="10"
        web_icon="management_educational_contracts,static/description/odoo_icon.png" />

    <menuitem
        id="educational_contract_submenu"
        name="Contratos"
        parent="educational_contract_menu"
        action="educational_contract_action"
        sequence="10"/>

</odoo>
